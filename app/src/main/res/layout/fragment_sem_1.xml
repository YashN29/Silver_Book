<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E7EEF2"
    tools:context=".Sem_1">

<TextView
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Upload Your Problem's"
    android:textSize="25dp"
    android:textColor="@color/black"
    android:fontFamily="serif"
    android:textAlignment="center"
    android:layout_margin="20dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@+id/tv">

        <androidx.appcompat.widget.AppCompatSpinner

            android:id="@+id/spdata"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:entries="@array/subjects" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:text="Write Your Doubt Below.."
        android:textColor="#0C80F2"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tview"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="serif"
        android:gravity="top|start"
        android:hint="Write your doubt here..."
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:padding="60dp"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ed_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:text="Submit"
        android:textSize="15dp"
        app:backgroundTint="#388E3C" />





</RelativeLayout>